{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2019",
    "lib": ["ES2020", "WebWorker", "ESNext.AsyncIterable"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "types": ["@cloudflare/workers-types"]
  },
  "include": [
    "./typings/*.d.ts",
    "./src/*.ts",
    "./src/**/*.ts",
  ],
  "exclude": [
    "node_modules/",
    "dist/",
    "**/dist/",
    "**/node_modules/",
    "**/worker/",
    "_*",
    "**/_*"
  ]
}